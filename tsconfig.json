{
    "compilerOptions": {
        "target": "es5",
        "types": ["node", "jest"],
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "typeRoots": ["node_modules/@types"]
    },
    "include": ["."],
    "exclude": [
        "node_modules",
        "**/*.test.*",
        "**/__mocks__/*",
        "**/__tests__/*"
    ]
}
